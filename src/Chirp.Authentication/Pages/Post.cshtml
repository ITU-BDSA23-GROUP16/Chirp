@page "/post"
@model PostModel
@{
    ViewData["Title"] = "PostCheep";
}
<h1>@ViewData["Title"]</h1>

<div class="cheepbox">
    <h3>What's on your mind @(User.Identity.Name)?</h3>
    <form method="post">
        <input style="float: left" type="text" name="message">
        <input type="submit" value="Share">
    </form>
</div>
