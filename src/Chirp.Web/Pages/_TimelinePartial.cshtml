@model Chirp.Web.Pages.TimelineModel

<!-- 
Partial for displaying a list of Cheeps from the TimelineModel
At the bottom, a set of buttons lets the user select which page to display
-->
@if (Model.Cheeps.Any())
{
    <ul id="messagelist" class="cheeps">
        @foreach (var cheep in Model.Cheeps!)
        {
            <li>
                <p>
                    <strong>
                        <a href="/author/@cheep.Author">@cheep.Author</a>
                    </strong>
                    @cheep.Message
                    <small>&mdash; @cheep.TimeStamp</small>
                </p>
            </li>
        }
    </ul>


    @if (Model.hasPage || Model.PageInt == 0)
    {
        <div class="paging">
            @for (var i = 1; i <= Model.Pages + 1; i++)
            {
                @if (i == Model.PageInt + 1)
                {
                    <a class="active" href="?page=@(i)">@(i)</a>
                }
                else
                {
                    <a href="?page=@(i)">@(i)</a>
                }

            }
        </div>
    }

} 
else
{
    <em>There are no cheeps so far.</em>
}
