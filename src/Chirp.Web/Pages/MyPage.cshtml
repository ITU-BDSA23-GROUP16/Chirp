@page "/MyPage"
@model MyPageModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<!-- 
This File mainly defines the layout of My Page
My Page allows the logged-in user to view information about themselves and to delete their account
-->


<div>
    <h2> My page </h2>

    <div>
        <dl>
            <div class="pink-back">
                <dt class="bodyText">
                    Username
                </dt>
                <dd>
                    @Model.UserName
                </dd>

            </div>
            <div class="pink-back">
                <dt class="bodyText">
                    E-mail
                </dt>
                <dd>
                    @Model.Email
                </dd>

            </div>

        </dl>

    </div>


    <p> <em>

            Want to delete account?

            <br>

            Your account will no longer be accessible.

        </em>
    </p>

    <form asp-route-returnUrl="/" asp-page-handler="delete" method="post">
        <button type="submit" class="forget">Forget me!</button>
    </form>


</div>